<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/iconApplication"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:contentDescription="Icon application"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

      <TextView
          android:id="@+id/txtApplication"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Name Application"
          android:textStyle="bold"

          />

      <TextView
          android:id="@+id/txtTotalSize"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="100 MB"
          />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="3"
        >

      <TextView
          android:id="@+id/txtApplicationSize"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="App: 14MB"
          />

      <TextView
          android:id="@+id/txtCacheSize"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Cache: 14MB"
          />

      <TextView
          android:id="@+id/txtDataSize"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Data: 14MB"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>